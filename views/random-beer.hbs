<div id="random-beer">
    <img src="{{beer.image_url}}" alt="{{beer.name}}">
    <div class="details">
        <h3>{{ beer.name }}</h3>
        <p>{{ beer.description }}</p>
        <h4>Food Pairing</h4>
        <ul>
            {{#each beer.food_pairing}}
                <li>{{ this }}</li>
            {{/each}}
        </ul>
        <p><b>Brewers Tips:</b> {{beer.brewers_tips}}</p>
    </div>
</div>